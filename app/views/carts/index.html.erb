<div class="row">
  <div class="col-md-12">
    <%= link_to("清空购物车",clean_carts_path, method: :delete,data:{confirm:"Are you sure?"}, class:"btn btn-sx btn-default pull-right") %>

<h1>购物车</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th colspan="2">商品信息</th>
      <th>单价</th>
      <th>数量</th>
      <th>选项</th>
    </tr>
  </thead>
  <% current_cart.cart_items.each do |cart_item| %>
    <tbody>
      <tr>
        <td>
          <%= link_to product_path(cart_item.product) do %>
           <% if cart_item.product.image.present? %>
              <%= image_tag(cart_item.product.image.thumb.url, class:"thumbnail") %>
           <% else %>
              <%= image_tag("http://placehold.it/200x200&text=No Pic", class:"thumbnail") %>
           <% end %>
          <% end %>
        </td>
        <td>
          <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
        </td>
        <td>
          <%= cart_item.product.price %>
        </td>
        <td>
          <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
             <%= f.select :quantity, [1,2,3,4,5] %>
             <%= f.submit "更新", data:{disable_with:"Submitting..."} %>
          <% end %>

        </td>
        <td>
          <%= link_to("Delete",cart_item_path(cart_item.product_id),method: :delete,:data => {:confirm => "Are you sure?"}) %>
        </td>

      </tr>
    </tbody>
    <% end %>
  </table>

  <br>

  <div class="total clearfix">
    <span class="pull-right">
      <span>
       总计 <%= render_cart_total_price(current_cart) %> RMB
      </span>
  </div>

  <hr>

  <div class="pull-right clearfix">
    <%= link_to("确认结账", "#", method: :post, class:"btn btn-lg btn-danger") %>
  </div>
 </div>
</div>
