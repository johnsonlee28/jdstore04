<div class="container">

  <h1>New Product</h1>

  <%= simple_form_for [:admin, @product] do |f| %>

   <div class="group">
     <%= f.input :title %>
   </div>

   <div class="group">
     <%= f.input :description %>
   </div>

   <div class="group">
     <%= f.input :price %>
   </div>

   <div class="group">
     <%= f.input :quantity %>
   </div>

   <div class="group">
     <%= f.input :image, :as => :file %>
   </div>

   <div class="form-group">
     <%= f.label :friendly_id %>
     <%= f.text_field :friendly_id, :required => true, :class => "form-control" %>
     <p class="help-block">限小写英文数字及黄线，将作为网址的一部份</p>
   </div>

   <div class="group">
     <%= f.submit "Submit", data:{disable_with:"Submiting..."} %>
   </div>

  <% end %>
</div>
